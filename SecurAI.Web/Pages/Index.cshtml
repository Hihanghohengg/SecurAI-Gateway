@page
@model IndexModel
@{
    Layout = null; // Menghilangkan layout bawaan
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SecurAI | Project Tugas Keamanan Pemograman</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

    <style>
        body { font-family: 'Plus Jakarta Sans', sans-serif; background-color: #f1f5f9; color: #1e293b; overflow: hidden; }
        
        /* SYMMETRY LOCKDOWN: Sidebar & Main Areas */
        #sidebar { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); width: 300px; flex-shrink: 0; display: flex; flex-direction: column; height: 100vh; }
        #sidebar.collapsed { width: 0; opacity: 0; pointer-events: none; border-right-width: 0; }
        
        /* TABLE STYLING */
        .prose table { width: 100%; border-collapse: collapse; margin: 1rem 0; background: white; border: 2px solid #e2e8f0; border-radius: 8px; overflow: hidden; }
        .prose th { background: #f8fafc; border: 1px solid #e2e8f0; padding: 12px; text-align: left; font-weight: 800; font-size: 0.7rem; text-transform: uppercase; color: #64748b; }
        .prose td { border: 1px solid #e2e8f0; padding: 12px; font-size: 0.85rem; color: #334155; font-weight: 500; }
        
        #chatWindow::-webkit-scrollbar { width: 4px; }
        #chatWindow::-webkit-scrollbar-thumb { background: #cbd5e0; border-radius: 10px; }
    </style>
</head>
<body class="h-screen flex w-full">

<div id="app" class="flex h-full w-full relative overflow-hidden">
    
    <div id="loginSection" class="fixed inset-0 z-[100] bg-slate-100 flex items-center justify-center p-6">
        <div class="bg-white rounded-[3rem] shadow-2xl flex overflow-hidden border-2 border-slate-200" style="width: 820px; min-height: 520px;">
            <div class="flex-1 p-14 flex flex-col justify-center">
                <div class="mb-10">
                    <h2 class="text-4xl font-extrabold text-slate-800 mb-2">Sign In</h2>
                    <p class="text-slate-400 text-xs font-bold uppercase tracking-widest">SecurAI Gateway v2.1</p>
                </div>
                
                <div class="space-y-6 mb-8">
                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Username</label>
                        <input type="text" id="username" class="w-full bg-slate-50 border-2 border-slate-200 rounded-2xl px-6 py-4 outline-none focus:border-indigo-600 transition-all font-bold" placeholder="Username">
                    </div>
                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Password</label>
                        <div class="relative">
                            <input type="password" id="password" class="w-full bg-slate-50 border-2 border-slate-200 rounded-2xl px-6 py-4 outline-none focus:border-indigo-600 transition-all font-bold pr-12" placeholder="Password">
                            <button onclick="togglePassword()" class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-400 hover:text-indigo-600">
                                <i id="eyeIcon" class="bi bi-eye-slash-fill text-xl"></i>
                            </button>
                        </div>
                    </div>
                </div>
                
                <button onclick="handleLogin()" id="btnLogin" class="w-full py-4 bg-indigo-700 hover:bg-indigo-800 text-white rounded-2xl font-black shadow-lg transition-all active:scale-95 uppercase text-sm tracking-wide">
                    Authenticate
                </button>
                <p id="loginError" class="hidden text-rose-600 text-center text-xs font-bold mt-6">! Authentication Failed</p>
            </div>

            <div class="w-[40%] bg-indigo-700 flex flex-col items-center justify-center text-center p-12 text-white border-l-4 border-indigo-800" style="border-radius: 80px 0 0 80px;">
                <div class="w-20 h-20 bg-white/10 rounded-3xl flex items-center justify-center mb-8 border border-white/20 shadow-inner">
                    <i class="bi bi-shield-lock-fill text-4xl"></i>
                </div>
                <h3 class="text-3xl font-extrabold mb-4 tracking-tight uppercase">SecurAI</h3>
                <p class="text-indigo-100 text-[11px] font-semibold leading-relaxed mb-10 px-4 italic">"Project Tugas Keamanan Pemograman"</p>
                <div class="text-[9px] font-black uppercase tracking-[0.2em] text-indigo-300 border-2 border-indigo-400/30 px-5 py-2 rounded-full bg-indigo-900/40">
                    III Rekayasa Perangkat Lunak Kripto
                </div>
            </div>
        </div>
    </div>

    <div id="chatSection" class="hidden flex w-full h-full bg-white">
        
        <aside id="sidebar" class="bg-slate-50 border-r-2 border-slate-200 z-20 overflow-hidden">
            <div onclick="toggleSidebar()" class="h-20 border-b-2 border-slate-200 flex items-center gap-4 bg-white px-6 cursor-pointer hover:bg-slate-50 transition-all">
                <div class="w-10 h-10 bg-indigo-700 rounded-xl flex items-center justify-center text-white shadow-lg flex-shrink-0">
                    <i class="bi bi-cpu-fill text-xl"></i>
                </div>
                <div class="truncate">
                    <h3 class="font-black text-slate-800 text-sm leading-tight">SecurAI Core</h3>
                    <p class="text-[9px] text-emerald-600 font-bold uppercase tracking-widest mt-1">Status: Online</p>
                </div>
            </div>

            <div class="flex-grow p-6 space-y-8 overflow-y-auto">
                <div class="space-y-4">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest block px-1">Security Dashboard</label>
                    <div class="p-4 bg-white rounded-2xl border-2 border-slate-200 shadow-sm">
                        <div class="flex justify-between text-[10px] font-black mb-3 text-slate-500 uppercase">
                            <span>Rate Limit</span>
                            <span class="text-indigo-700">3 req / 10s</span>
                        </div>
                        <div class="w-full bg-slate-100 h-2 rounded-full overflow-hidden border">
                            <div class="bg-indigo-600 h-full w-1/3 shadow-[0_0_8px_#4f46e5]"></div>
                        </div>
                    </div>
                    <div class="p-4 bg-white rounded-2xl border-2 border-slate-200 flex items-center gap-3">
                        <i class="bi bi-patch-check-fill text-emerald-500 text-xl"></i>
                        <span class="text-[10px] font-black text-slate-700 uppercase tracking-tight">JWT-256 Validated</span>
                    </div>
                </div>
            </div>

            <div class="h-32 border-t-2 border-slate-200 bg-white flex items-center px-6">
                <button onclick="handleLogout()" class="w-full py-4 text-slate-500 hover:text-white hover:bg-rose-600 border-2 border-slate-200 rounded-xl font-bold flex items-center justify-center gap-2 transition-all text-[10px] uppercase tracking-widest">
                    <i class="bi bi-power text-lg"></i> Logout Session
                </button>
            </div>
        </aside>

        <main class="flex-grow flex flex-col bg-white relative min-w-0">
            <header class="h-20 border-b-2 border-slate-200 flex items-center justify-between px-10 bg-white z-10 shadow-sm">
                <div class="flex items-center gap-5">
                    <div onclick="toggleSidebar()" class="w-10 h-10 bg-indigo-700 rounded-xl flex items-center justify-center text-white cursor-pointer hover:scale-110 transition-transform shadow-lg">
                        <i class="bi bi-shield-fill text-xl"></i>
                    </div>
                    <h2 class="font-black text-slate-700 uppercase text-[10px] tracking-widest">Gateway Monitor</h2>
                </div>
                <div class="flex items-center gap-5 text-[10px] font-bold">
                    <span class="text-indigo-700 uppercase tracking-tighter">Llama3:Kripto Engine</span>
                    <div class="h-9 w-9 bg-slate-50 border-2 border-slate-200 rounded-xl flex items-center justify-center text-slate-500">
                        <i class="bi bi-person-fill text-xl"></i>
                    </div>
                </div>
            </header>

            <div id="chatWindow" class="flex-grow overflow-y-auto p-10 space-y-6 bg-slate-50 shadow-inner">
                </div>

            <div class="h-32 border-t-2 border-slate-200 bg-white z-20 flex flex-col justify-center px-10">
                <div class="max-w-4xl w-full mx-auto">
                    <div class="flex items-center gap-4">
                        <div class="relative flex-grow">
                            <input type="text" id="userPrompt" class="w-full bg-slate-50 border-2 border-slate-200 rounded-2xl px-8 py-4 outline-none focus:border-indigo-600 focus:bg-white font-bold text-sm shadow-inner transition-all" placeholder="Enter security directive..." onkeypress="if(event.key==='Enter') sendChat()">
                        </div>
                        <button onclick="sendChat()" id="btnSend" class="bg-indigo-700 hover:bg-indigo-800 text-white w-14 h-14 rounded-2xl shadow-xl transition-all flex items-center justify-center active:scale-90">
                            <i class="bi bi-send-fill text-xl"></i>
                        </button>
                    </div>
                    <div class="mt-4 text-center">
                        <span class="text-[9px] font-black text-slate-400 uppercase tracking-[0.2em]">Encrypted Handshake Verified • AES-256 Active</span>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<script>
    const API_URL = "http://localhost:5130/api";

    function toggleSidebar() { document.getElementById('sidebar').classList.toggle('collapsed'); }

    function togglePassword() {
        const pInput = document.getElementById('password');
        const icon = document.getElementById('eyeIcon');
        if (pInput.type === "password") {
            pInput.type = "text";
            icon.className = "bi bi-eye-fill text-xl";
        } else {
            pInput.type = "password";
            icon.className = "bi bi-eye-slash-fill text-xl";
        }
    }

    window.onload = () => {
        const token = localStorage.getItem("jwt_token");
        if (token && token !== "undefined") showChat();
    };

    async function handleLogin() {
        const btn = document.getElementById('btnLogin');
        btn.innerText = "AUTHENTICATING..."; btn.disabled = true;
        try {
            const response = await fetch(`${API_URL}/login`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ username: document.getElementById('username').value, password: document.getElementById('password').value })
            });
            if (response.ok) {
                const data = await response.json();
                localStorage.setItem("jwt_token", data.Token || data.token);
                showChat();
            } else { document.getElementById('loginError').classList.remove('hidden'); }
        } catch (e) { alert("API Offline (5130)"); } finally { btn.disabled = false; btn.innerText = "Authenticate"; }
    }

    function showChat() {
        document.getElementById('loginSection').classList.add('hidden');
        document.getElementById('chatSection').classList.remove('hidden');
        appendMessage("SecurAI", "Gateway Verified. Kripto Engine is now accepting directives.", "text-indigo-700 text-[10px] font-black uppercase tracking-[0.2em] text-center bg-indigo-50 border-2 border-indigo-100 py-3 rounded-xl mb-8");
    }

    function handleLogout() { localStorage.removeItem("jwt_token"); location.reload(); }

    async function sendChat() {
        const promptInput = document.getElementById('userPrompt');
        const prompt = promptInput.value.trim();
        const token = localStorage.getItem("jwt_token");
        if (!prompt) return;

        appendMessage("Operator", prompt, "bg-indigo-700 text-white ml-auto max-w-[80%] rounded-2xl rounded-tr-sm shadow-md font-bold");
        promptInput.value = "";

        try {
            const response = await fetch(`${API_URL}/chat`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` },
                body: JSON.stringify({ prompt: prompt })
            });
            if (response.status === 429) {
                appendMessage("Security", "Rate limit breach. Wait 10s.", "bg-rose-50 text-rose-600 border-2 border-rose-100 text-[10px] font-black px-4 py-2 rounded-xl text-center");
            } 
            else if (response.ok) {
                const data = await response.json();
                appendMessage("SecurAI", data.Response || data.response, "bg-white border-2 border-slate-200 shadow-sm max-w-[95%] rounded-3xl rounded-tl-sm text-slate-700");
            } 
        } catch (e) { appendMessage("Error", "Link failure."); }
    }

    function appendMessage(sender, text, cssClass = "") {
        const window = document.getElementById('chatWindow');
        const div = document.createElement('div');
        div.className = `flex flex-col ${sender.includes('Operator') ? 'items-end' : 'items-start'} mb-6`;
        const html = marked.parse(text);
        div.innerHTML = `<span class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1 px-3">${sender}</span><div class="p-6 text-sm leading-relaxed ${cssClass} prose prose-slate"><div class="whitespace-normal font-medium">${html}</div></div>`;
        window.appendChild(div); window.scrollTop = window.scrollHeight;
    }
</script>

</body>
</html>